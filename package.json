{
  "name": "draft-components",
  "version": "2.4.2",
  "description": "The React based UI components library.",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./css/*": "./css/*"
  },
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">= 16"
  },
  "files": [
    "dist",
    "css"
  ],
  "scripts": {
    "prepare": "husky install",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "lint": "npm run lint-js && npm run lint-css",
    "lint-js": "eslint '**/*.{js,ts,tsx}'",
    "lint-css": "stylelint 'src/**/*.css'",
    "typecheck": "tsc --project 'tsconfig.json' --noEmit",
    "prebuild": "npm run typecheck && npm run lint && npm run test",
    "build": "node scripts/build.js",
    "build-storybook": "storybook build",
    "preversion": "npm run build",
    "storybook": "storybook dev --port 6060 --no-open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexzimakov/draft-components.git"
  },
  "keywords": [
    "react",
    "components",
    "library"
  ],
  "author": "https://github.com/alexzimakov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexzimakov/draft-components/issues"
  },
  "homepage": "https://draft-components.netlify.app",
  "peerDependencies": {
    "react": ">= 18",
    "react-dom": ">= 18"
  },
  "devDependencies": {
    "@alexzimakov/eslint-config": "1.7.0",
    "@heroicons/react": "2.0.18",
    "@storybook/addon-actions": "7.4.6",
    "@storybook/addon-essentials": "7.4.6",
    "@storybook/addon-links": "7.4.6",
    "@storybook/addon-themes": "7.4.6",
    "@storybook/react": "7.4.6",
    "@storybook/react-vite": "7.4.6",
    "@testing-library/dom": "9.3.3",
    "@testing-library/jest-dom": "6.1.4",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.5.1",
    "@types/node": "18.18.5",
    "@types/react": "18.2.28",
    "@types/react-dom": "18.2.13",
    "@typescript-eslint/eslint-plugin": "6.7.5",
    "@typescript-eslint/parser": "6.7.5",
    "@vitest/coverage-istanbul": "0.34.6",
    "autoprefixer": "10.4.16",
    "eslint": "8.51.0",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-storybook": "0.6.15",
    "eslint-plugin-testing-library": "6.1.0",
    "husky": "8.0.3",
    "jsdom": "22.1.0",
    "lint-staged": "15.0.1",
    "postcss": "8.4.31",
    "postcss-import": "15.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "storybook": "7.4.6",
    "stylelint": "15.10.3",
    "stylelint-config-standard": "34.0.0",
    "stylelint-order": "6.0.3",
    "typescript": "5.2.2",
    "vite": "4.4.11",
    "vitest": "0.34.6"
  },
  "lint-staged": {
    "*.ts?(x)": "npm run lint-js",
    "*.css": "npm run lint-css"
  }
}
