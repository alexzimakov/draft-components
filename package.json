{
  "name": "draft-components",
  "version": "4.4.0",
  "description": "The React based UI components library.",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components/*": "./dist/components/*",
    "./hooks/*": "./dist/hooks/*",
    "./lib/*": "./dist/lib/*",
    "./css/*": "./css/*"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "css"
  ],
  "scripts": {
    "prepare": "husky",
    "test": "vitest run",
    "test-watch": "vitest",
    "test-coverage": "vitest run --coverage",
    "lint": "npm run lint-js && npm run lint-css",
    "lint-js": "eslint",
    "lint-css": "stylelint 'src/**/*.css'",
    "typecheck": "tsc --project 'tsconfig.json' --noEmit",
    "prebuild": "npm run typecheck && npm run lint && npm run test",
    "build": "node scripts/build.js",
    "build-storybook": "storybook build",
    "preversion": "npm run build",
    "storybook": "storybook dev --port 6060 --no-open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexzimakov/draft-components.git"
  },
  "keywords": [
    "react",
    "components",
    "library"
  ],
  "author": "https://github.com/alexzimakov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexzimakov/draft-components/issues"
  },
  "homepage": "https://draft-components.netlify.app",
  "peerDependencies": {
    "react": ">= 19",
    "react-dom": ">= 19"
  },
  "devDependencies": {
    "@eslint/js": "9.27.0",
    "@storybook/addon-actions": "8.6.14",
    "@storybook/addon-essentials": "8.6.14",
    "@storybook/addon-links": "8.6.14",
    "@storybook/addon-themes": "8.6.14",
    "@storybook/core-common": "8.6.14",
    "@storybook/react": "8.6.14",
    "@storybook/react-vite": "8.6.14",
    "@stylistic/eslint-plugin": "4.2.0",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "22.15.21",
    "@types/react": "19.1.5",
    "@types/react-dom": "19.1.5",
    "@vitejs/plugin-react": "4.5.0",
    "@vitest/coverage-istanbul": "3.1.4",
    "autoprefixer": "10.4.21",
    "color": "5.0.0",
    "eslint": "9.27.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-storybook": "0.12.0",
    "eslint-plugin-testing-library": "7.2.1",
    "glob": "11.0.2",
    "globals": "16.1.0",
    "husky": "9.1.7",
    "jsdom": "26.1.0",
    "lint-staged": "16.0.0",
    "postcss": "8.5.3",
    "postcss-import": "16.1.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "storybook": "8.6.14",
    "stylelint": "16.19.1",
    "stylelint-config-recess-order": "6.0.0",
    "stylelint-config-standard": "38.0.0",
    "typescript": "5.8.3",
    "typescript-eslint": "8.32.1",
    "vite": "6.3.5",
    "vitest": "3.1.4"
  },
  "lint-staged": {
    "*.ts?(x)": "npm run lint-js",
    "*.css": "npm run lint-css"
  }
}
