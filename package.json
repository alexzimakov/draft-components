{
  "name": "draft-components",
  "version": "2.11.0",
  "description": "The React based UI components library.",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components/*": "./dist/components/*",
    "./hooks/*": "./dist/hooks/*",
    "./lib/*": "./dist/lib/*",
    "./css/*": "./css/*"
  },
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">= 18"
  },
  "files": [
    "dist",
    "css"
  ],
  "scripts": {
    "prepare": "husky install",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "lint": "npm run lint-js && npm run lint-css",
    "lint-js": "eslint '**/*.[jt]s?(x)'",
    "lint-css": "stylelint 'src/**/*.css'",
    "typecheck": "tsc --project 'tsconfig.json' --noEmit",
    "prebuild": "npm run typecheck && npm run lint && npm run test",
    "build": "node scripts/build.js",
    "build-storybook": "storybook build",
    "preversion": "npm run build",
    "storybook": "storybook dev --port 6060 --no-open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexzimakov/draft-components.git"
  },
  "keywords": [
    "react",
    "components",
    "library"
  ],
  "author": "https://github.com/alexzimakov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexzimakov/draft-components/issues"
  },
  "homepage": "https://draft-components.netlify.app",
  "peerDependencies": {
    "react": ">= 18",
    "react-dom": ">= 18"
  },
  "devDependencies": {
    "@heroicons/react": "2.1.1",
    "@storybook/addon-actions": "7.6.7",
    "@storybook/addon-essentials": "7.6.7",
    "@storybook/addon-links": "7.6.7",
    "@storybook/addon-themes": "7.6.7",
    "@storybook/react": "7.6.7",
    "@storybook/react-vite": "7.6.7",
    "@stylistic/eslint-plugin": "1.6.3",
    "@testing-library/dom": "9.3.3",
    "@testing-library/jest-dom": "6.2.0",
    "@testing-library/react": "14.1.2",
    "@testing-library/user-event": "14.5.2",
    "@types/node": "20.10.7",
    "@types/react": "18.2.47",
    "@types/react-dom": "18.2.18",
    "@typescript-eslint/eslint-plugin": "7.1.1",
    "@typescript-eslint/parser": "7.1.1",
    "@vitest/coverage-istanbul": "1.1.3",
    "autoprefixer": "10.4.16",
    "color": "4.2.3",
    "eslint": "8.57.0",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-react": "7.34.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-storybook": "0.8.0",
    "eslint-plugin-testing-library": "6.2.0",
    "glob": "10.3.10",
    "husky": "8.0.3",
    "jsdom": "23.2.0",
    "lint-staged": "15.2.0",
    "postcss": "8.4.33",
    "postcss-import": "16.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "storybook": "7.6.7",
    "stylelint": "16.2.1",
    "stylelint-config-recess-order": "5.0.0",
    "stylelint-config-standard": "36.0.0",
    "typescript": "5.3.3",
    "vite": "5.0.11",
    "vitest": "1.1.3"
  },
  "lint-staged": {
    "*.ts?(x)": "npm run lint-js",
    "*.css": "npm run lint-css"
  }
}
