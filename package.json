{
  "name": "draft-components",
  "version": "0.75.3",
  "description": "The React based UI components library.",
  "exports": {
    ".": {
      "import": "./esm/index.js",
      "require": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "module": "esm/index.js",
  "files": [
    "css",
    "dist",
    "esm"
  ],
  "scripts": {
    "test": "jest",
    "test-coverage": "npm run test -- --coverage --no-cache",
    "lint": "eslint '**/*.{js,ts,tsx}'",
    "stylelint": "stylelint 'src/**/*.css'",
    "type-check": "tsc --noEmit",
    "build": "gulp",
    "prebuild": "npm run test && npm run lint && npm run stylelint",
    "preversion": "npm run build",
    "storybook": "start-storybook --port 6060 --no-open",
    "build-storybook": "build-storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexzimakov/draft-components.git"
  },
  "keywords": [
    "react",
    "components",
    "library"
  ],
  "author": "https://github.com/alexzimakov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexzimakov/draft-components/issues"
  },
  "homepage": "https://alexzimakov.github.io/draft-components",
  "peerDependencies": {
    "react": ">= 18",
    "react-dom": ">= 18"
  },
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-react": "7.18.6",
    "@babel/preset-typescript": "7.18.6",
    "@heroicons/react": "2.0.13",
    "@storybook/addon-actions": "6.5.15",
    "@storybook/addon-essentials": "6.5.15",
    "@storybook/addon-links": "6.5.15",
    "@storybook/builder-vite": "0.2.6",
    "@storybook/react": "6.5.15",
    "@testing-library/dom": "8.19.1",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "14.4.3",
    "@types/jest": "29.2.5",
    "@types/node": "18.11.18",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "@typescript-eslint/eslint-plugin": "5.48.0",
    "@typescript-eslint/parser": "5.48.0",
    "autoprefixer": "10.4.13",
    "cssnano": "5.1.14",
    "eslint": "8.31.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-react": "7.31.11",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-storybook": "0.6.8",
    "eslint-plugin-testing-library": "5.9.1",
    "gulp": "4.0.2",
    "gulp-postcss": "9.0.1",
    "gulp-rename": "2.0.0",
    "husky": "4.3.8",
    "jest": "29.3.1",
    "jest-environment-jsdom": "29.3.1",
    "lint-staged": "13.1.0",
    "postcss-import": "15.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "storybook": "6.5.15",
    "stylelint": "14.16.1",
    "stylelint-config-standard": "29.0.0",
    "stylelint-order": "5.0.0",
    "typescript": "4.9.4",
    "vite": "4.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts?(x)": "npm run lint"
  }
}
