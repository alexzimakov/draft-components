{
  "name": "draft-components",
  "version": "1.5.0",
  "description": "The React based UI components library.",
  "type": "module",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./esm/index.js",
      "require": "./cjs/index.cjs"
    },
    "./css/*": {
      "import": "./css/*",
      "require": "./css/*"
    }
  },
  "module": "./esm/index.js",
  "main": "./cjs/index.cjs",
  "types": "./types/index.d.ts",
  "files": [
    "cjs",
    "esm",
    "css",
    "types"
  ],
  "scripts": {
    "prepare": "husky install",
    "test": "jest",
    "coverage": "npm run test -- --coverage --no-cache",
    "lint": "eslint '**/*.{js,ts,tsx}'",
    "lint-styles": "stylelint 'src/**/*.css'",
    "check-types": "tsc --noEmit",
    "prebuild": "npm run test && npm run lint && npm run lint-styles",
    "build": "node scripts/build.js",
    "build-storybook": "storybook build",
    "preversion": "npm run build",
    "storybook": "storybook dev --port 6060 --no-open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexzimakov/draft-components.git"
  },
  "keywords": [
    "react",
    "components",
    "library"
  ],
  "author": "https://github.com/alexzimakov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexzimakov/draft-components/issues"
  },
  "homepage": "https://draft-components.netlify.app",
  "peerDependencies": {
    "react": ">= 18",
    "react-dom": ">= 18"
  },
  "devDependencies": {
    "@alexzimakov/eslint-config": "1.5.0",
    "@babel/core": "7.21.8",
    "@babel/preset-env": "7.21.5",
    "@babel/preset-react": "7.18.6",
    "@babel/preset-typescript": "7.21.5",
    "@heroicons/react": "2.0.18",
    "@rollup/plugin-typescript": "11.1.1",
    "@storybook/addon-actions": "7.0.22",
    "@storybook/addon-essentials": "7.0.22",
    "@storybook/addon-links": "7.0.22",
    "@storybook/react": "7.0.22",
    "@storybook/react-vite": "7.0.22",
    "@testing-library/dom": "9.3.0",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.4.3",
    "@types/jest": "29.5.1",
    "@types/node": "18.16.8",
    "@types/react": "18.2.6",
    "@types/react-dom": "18.2.4",
    "@typescript-eslint/eslint-plugin": "5.59.5",
    "@typescript-eslint/parser": "5.59.5",
    "autoprefixer": "10.4.14",
    "eslint": "8.40.0",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-storybook": "0.6.12",
    "eslint-plugin-testing-library": "5.11.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "lint-staged": "13.2.2",
    "postcss": "8.4.23",
    "postcss-import": "15.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rollup": "3.21.6",
    "storybook": "7.0.22",
    "stylelint": "15.6.1",
    "stylelint-config-standard": "33.0.0",
    "stylelint-order": "6.0.3",
    "typescript": "4.9.5",
    "vite": "4.3.9"
  },
  "lint-staged": {
    "*.ts?(x)": "npm run lint",
    "*.css": "npm run lint-styles"
  },
  "engines": {
    "node": ">= 14.16"
  }
}
